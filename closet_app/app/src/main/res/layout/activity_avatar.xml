<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/avatar_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AvatarActivity">

    <!-- Background (optional) -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@null"/>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#CCFFFFFF">

                <!-- HEADER -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_title"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="24dp"
                    android:paddingVertical="16dp">

                    <ImageView
                        android:id="@+id/hamburger_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:clickable="true"
                        android:contentDescription="@string/menu"
                        android:src="@drawable/hamburger"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/logo_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="serif"
                        android:text="@string/app_name"
                        android:textColor="#000"
                        android:textSize="22sp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/logo_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="12dp"
                        android:contentDescription="@string/hanger_icon"
                        android:src="@drawable/hanger"/>
                </LinearLayout>

                <!-- MIDDLE: labels + 5 vertical cards with a "+" icon -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Headwear Label + Box -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Headwear"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />
                        <androidx.cardview.widget.CardView
                            android:id="@+id/box_headwear"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginBottom="12dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp">
                            <ImageView
                                android:id="@+id/img_headwear"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_add"
                                android:contentDescription="@string/add_item"
                                android:scaleType="centerInside"/>
                        </androidx.cardview.widget.CardView>

                        <!-- Accessories Label + Box -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accessories"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />
                        <androidx.cardview.widget.CardView
                            android:id="@+id/box_jewellery"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginBottom="12dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp">
                            <ImageView
                                android:id="@+id/img_jewellery"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_add"
                                android:contentDescription="@string/add_item"
                                android:scaleType="centerInside"/>
                        </androidx.cardview.widget.CardView>

                        <!-- Shirts Label + Box -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shirts"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />
                        <androidx.cardview.widget.CardView
                            android:id="@+id/box_shirts"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginBottom="12dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp">
                            <ImageView
                                android:id="@+id/img_shirts"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_add"
                                android:contentDescription="@string/add_item"
                                android:scaleType="centerInside"/>
                        </androidx.cardview.widget.CardView>

                        <!-- Pants Label + Box -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pants"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />
                        <androidx.cardview.widget.CardView
                            android:id="@+id/box_pants"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginBottom="12dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp">
                            <ImageView
                                android:id="@+id/img_pants"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_add"
                                android:contentDescription="@string/add_item"
                                android:scaleType="centerInside"/>
                        </androidx.cardview.widget.CardView>

                        <!-- Shoes Label + Box -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shoes"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />
                        <androidx.cardview.widget.CardView
                            android:id="@+id/box_shoes"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginBottom="8dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp">
                            <ImageView
                                android:id="@+id/img_shoes"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_add"
                                android:contentDescription="@string/add_item"
                                android:scaleType="centerInside"/>
                            <!-- Envision Avatar button -->


                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </ScrollView>
                <Button
                    android:id="@+id/btn_envision"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/envision_avatar"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="16dp"/>


                <!-- Separator -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"/>

                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/bottom_navigation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:itemIconTint="@color/dark_gray"
                    app:itemTextColor="@color/dark_gray"
                    app:menu="@menu/bottom_nav_menu"/>
            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <com.google.android.material.navigation.NavigationView
                android:id="@+id/navigation_view"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
                android:layout_gravity="start"
                app:menu="@menu/drawer_menu"
                app:headerLayout="@layout/nav_header" />
    </androidx.drawerlayout.widget.DrawerLayout>
</FrameLayout>
