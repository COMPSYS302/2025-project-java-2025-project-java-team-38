<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Clothing displayed -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Logo, hamburger encoded -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/rounded_title"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:paddingHorizontal="24dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/hamburger_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="160dp"
                    android:contentDescription="Menu"
                    android:src="@drawable/hamburger" />

                <TextView
                    android:id="@+id/logo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Closet"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="serif" />

                <ImageView
                    android:id="@+id/logo_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/hanger"
                    android:contentDescription="Hanger Icon"
                    android:scaleType="fitCenter" />
            </LinearLayout>


            <!-- Search bar -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:elevation="0dp"
                app:cardCornerRadius="8dp">

                <EditText
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Search"
                    android:padding="12dp"
                    android:background="@drawable/rounded_title"
                    android:inputType="text"
                    android:drawableLeft="@android:drawable/ic_menu_search" />
            </androidx.cardview.widget.CardView>


            <!-- ViewPager for images -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="16dp" />

            <!-- Product Name/Description -->
            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Galaxy Collusion Jeans"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Size dropdown -->
            <Spinner
                android:id="@+id/size_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Fabric / Fit / Care Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_fabric"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fabric"
                    android:textColor="#000000"
                    android:backgroundTint="@color/categoryButtonLightGrey"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_fit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fit"
                    android:textColor="#000000"
                    android:backgroundTint="@color/categoryButtonLightGrey"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btn_care"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Care"
                    android:textColor="#000000"
                    android:backgroundTint="@color/categoryButtonLightGrey"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Side menu -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>


