<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Home Page -->

    <!-- Navigation Drawer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Hamburger menu -->
        <ImageView
            android:id="@+id/hamburger_icon"
            android:layout_width="44dp"
            android:layout_height="41dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="Menu"
            android:src="@drawable/hamburger" />

        <!-- Search Bar -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:elevation="4dp"
            app:cardCornerRadius="8dp">

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_title"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:hint="Search"
                android:inputType="text"
                android:padding="12dp" />
        </androidx.cardview.widget.CardView>

        <!-- Logo and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_title"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Closet"
                android:textColor="#000000"
                android:textSize="52sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="83dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/rounded_title"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp">

                <ImageView
                    android:layout_width="73dp"
                    android:layout_height="69dp"
                    android:contentDescription="Hanger Icon"
                    android:scaleType="fitCenter"
                    android:src="@drawable/hanger" />
            </LinearLayout>
        </LinearLayout>

        <!-- Category Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="249dp"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="16dp">

            <Button
                android:id="@+id/btn_top_picks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/categoryButtonGrey"
                android:drawableStart="@drawable/heart"
                android:drawablePadding="12dp"
                android:text="Top Picks"
                android:textColor="#FFFFFF" />


            <Button
                android:id="@+id/btn_most_viewed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="@color/categoryButtonGrey"
                android:drawableStart="@drawable/eye"
                android:drawablePadding="12dp"
                android:text="Most Viewed"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_new_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/categoryButtonGrey"
                android:drawableStart="@drawable/newin"
                android:text="New In"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Home page image -->
        <ImageView
            android:layout_width="253dp"
            android:layout_height="245dp"
            android:contentDescription="Hanger Icon"
            android:src="@drawable/clothes" />

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>