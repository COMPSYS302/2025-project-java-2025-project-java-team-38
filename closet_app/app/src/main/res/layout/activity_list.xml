<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ListActivity">

    <!-- ───────────────────────────────────────────────────────────────────────
         1) Main content now lives directly inside CoordinatorLayout (no more ScrollView)
            so that RecyclerView can measure & scroll correctly.
       ─────────────────────────────────────────────────────────────────────── -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Container that holds header + search + content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ────────────────────────────────────────────────────────────────
                 Your “logo + hamburger + title + icon” header (unchanged)
               ──────────────────────────────────────────────────────────────── -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_title"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="24dp"
                android:paddingVertical="16dp">

                <!-- Hamburger menu -->
                <ImageView
                    android:id="@+id/hamburger_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:clickable="true"
                    android:contentDescription="Menu"
                    android:focusable="true"
                    android:src="@drawable/hamburger" />

                <!-- Spacer pushes title to center -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <!-- Title text -->
                <TextView
                    android:id="@+id/logo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="serif"
                    android:text="Closet"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <!-- Logo icon -->
                <ImageView
                    android:id="@+id/logo_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="12dp"
                    android:clickable="true"
                    android:contentDescription="Hanger Icon"
                    android:focusable="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/hanger" />

            </LinearLayout>

            <!-- ────────────────────────────────────────────────────────────────
                 Your search bar (unchanged)
               ──────────────────────────────────────────────────────────────── -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="0dp"
                app:cardCornerRadius="8dp">

                <EditText
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/rounded_title"
                    android:drawableLeft="@android:drawable/ic_menu_search"
                    android:hint="Search"
                    android:inputType="text"
                    android:padding="12dp" />
            </androidx.cardview.widget.CardView>

            <!-- ────────────────────────────────────────────────────────────────
                 THIS FRAME LAYOUT HOLDS:
                    • RecyclerView
                    • ProgressBar (initially GONE)
                    • “No items found” TextView (initially GONE)
                 We give it a weight (0dp height + weight=1) so it expands to fill
                 behind the header+search area.
               ──────────────────────────────────────────────────────────────── -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="400dp">

                <!-- RecyclerView (fills entire FrameLayout) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_items"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:fadeScrollbars="true"
                    android:scrollbars="vertical"
                    tools:listitem="@layout/row_list_item" />

                <!-- ProgressBar (centered), initially hidden -->
                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

                <!-- “No items found” message (centered), initially hidden -->
                <TextView
                    android:id="@+id/text_empty_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="No items found"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16sp"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- ───────────────────────────────────────────────────────────────────────
         Your navigation drawer (unchanged)
       ─────────────────────────────────────────────────────────────────────── -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true" />

</androidx.drawerlayout.widget.DrawerLayout>
