<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.closet">

    <application
        android:allowBackup="true"
        android:icon="@drawable/hanger"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <!-- Allow the Credentials broker -->
        <meta-data
            android:name="com.google.android.gms.auth.api.credentials.CredentialManager.BROKER_ALLOWED_CALLERS"
            android:resource="@array/broker_allowed_callers" />

        <!-- 1) LoginActivity: NEW entry, set as LAUNCHER so it opens first. -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 2) MainActivity: secondary entry -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/AppTheme">
        </activity>

        <!-- 3) Other activities unchanged -->
        <activity
            android:name=".ListActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DetailsActivity"
            android:exported="false"
            android:parentActivityName=".ListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MostViewedActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>
</manifest>
